{
  "name": "clear",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build && node scripts/check-bundle-size.mjs",
    "preview": "vite preview --port 5173",
    "test": "vitest --run",
    "lint": "eslint src --ext .ts,.tsx",
    "format": "prettier --write .",
    "test:a11y": "vitest --run src/__tests__/a11y.test.ts",
    "test:e2e": "playwright test",
    "deploy:netlify": "npm run build && npx netlify deploy --prod --dir=dist",
    "deploy:vercel": "npm run build && npx vercel --prod",
  "deploy:gh-pages": "set BASE_PATH=/human-operating-system/ && npm run build && npx gh-pages -d dist"
  },
  "dependencies": {
    "dexie": "^4.0.8",
    "i18next": "^23.11.5",
    "jsqr": "^1.4.0",
    "qrcode": "^1.5.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-i18next": "^14.1.2",
    "react-router-dom": "^6.26.2",
    "uuid": "^9.0.1",
    "zustand": "^4.5.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@playwright/test": "^1.55.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.0.1",
    "@types/jsdom": "^21.1.7",
    "@types/qrcode": "^1.5.5",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "axe-core": "^4.10.3",
  "jest-axe": "^8.0.0",
    "eslint": "^9.9.0",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-react": "^7.37.5",
    "fake-indexeddb": "^6.0.1",
    "jsdom": "^25.0.1",
  "@lhci/cli": "^0.13.0",
    "playwright": "^1.55.0",
    "prettier": "^3.3.3",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.42.0",
    "vite": "^5.4.1",
    "vite-plugin-pwa": "^0.20.5",
    "vitest": "^2.0.5"
  }
